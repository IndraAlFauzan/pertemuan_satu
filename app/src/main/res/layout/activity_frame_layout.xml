<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frame_layout"
    tools:ignore="ExtraText">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_mbw" />

    <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_amglogo" />

    <TextView
        android:layout_marginTop="70dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MERCRDES BENZ"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center|top"
        />
    <TextView
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AMG PERFORMANCE EDITION"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center|top"
        />

    <Button
        android:layout_marginTop="150dp"
        android:layout_marginBottom="50dp"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="BOOK NOW"
        android:backgroundTint="@color/grey_lightest"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="bottom|center_horizontal"/>

    <ImageButton
        android:layout_width="89dp"
        android:layout_height="107dp"
        android:layout_gravity="center|left"


        android:backgroundTint="@color/transparent"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_keyboard_arrow_left_24" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M260 AMG"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <ImageButton
        android:layout_width="89dp"
        android:layout_height="107dp"
        android:layout_gravity="center|right"
        android:layout_marginLeft="20dp"

        android:layout_marginRight="20dp"
        android:backgroundTint="@color/transparent"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_keyboard_arrow_right_24" />







    />











</FrameLayout>